/**
 * Create a configured page if it does not exist.
 *
 * Implements hook_rebuild().
 */
function ahs_miscellaneous_rebuild() {
  foreach (AHS_CONFIGURED_PAGES as $page) {
    $node = \Drupal::service('entity.repository')
      ->loadEntityByUuid('node', $page['uuid']);
    if (empty($node)) {
      $node = Node::create([
        'type' => 'information',
        'title' => $page['title'],
        'uuid' => $page['uuid']
      ]);
      $node->save();
    }
  }
}

/**
 * Prevent configured pages from being deleted.
 *
 * Implements hook_node_access().
 */
function ahs_miscellaneous_node_access(\Drupal\node\NodeInterface $node, $op, \Drupal\Core\Session\AccountInterface $account) {
  if ($op == 'delete') {
    $uuids = array_column(AHS_CONFIGURED_PAGES, 'uuid');
    if (in_array($node->uuid(), $uuids)) {
      return AccessResult::forbidden();
    }
    return AccessResult::neutral();
  }
}
